@model IEnumerable<Bibliotheques.ApplicationCore.Entities.Usager>
@{
    ViewData["Title"] = "Usagers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users"></i> Liste des Usagers</h2>
    <a class="btn btn-primary" asp-action="Create">
        <i class="fas fa-plus"></i> Nouvel Usager
    </a>
</div>

<!-- Recherche -->
<form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-8">
            <input name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Rechercher par nom, prénom ou courriel..." />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-search"></i> Rechercher
            </button>
        </div>
    </div>
</form>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nom complet</th>
                    <th>Courriel</th>
                    <th>Téléphone</th>
                    <th>Défaillances</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usager in Model)
                {
                    <tr class="@(usager.EstBloque ? "table-danger" : "")">
                        <td><strong>@usager.NomComplet</strong></td>
                        <td>@usager.Courriel</td>
                        <td>@(usager.Telephone ?? "-")</td>
                        <td>
                            @if (usager.NombreDefaillances > 0)
                            {
                                <span class="badge bg-warning">@usager.NombreDefaillances</span>
                            }
                            else
                            {
                                <span class="badge bg-success">0</span>
                            }
                        </td>
                        <td>
                            @if (usager.EstBloque)
                            {
                                <span class="badge bg-danger">
                                    <i class="fas fa-ban"></i> Bloqué
                                </span>
                            }
                            else if (usager.PeutEmprunter)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check"></i> Actif
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="fas fa-exclamation-triangle"></i> Limite atteinte
                                </span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@usager.Id">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@usager.Id">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@usager.Id">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Aucun usager trouvé.
    </div>
}
