@model Bibliotheques.ApplicationCore.Entities.Livre
@{
    ViewData["Title"] = "Supprimer le Livre";
}

<h2><i class="fas fa-trash"></i> Supprimer le Livre</h2>

<div class="alert alert-warning">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>Attention!</strong> Êtes-vous sûr de vouloir supprimer ce livre ?
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>@Model.Titre</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Auteur:</dt>
                    <dd class="col-sm-9">@Model.Auteur</dd>
                    
                    <dt class="col-sm-3">Année de publication:</dt>
                    <dd class="col-sm-9">@Model.AnneePublication</dd>
                    
                    <dt class="col-sm-3">ISBN:</dt>
                    <dd class="col-sm-9"><code>@Model.Isbn</code></dd>
                    
                    <dt class="col-sm-3">Quantité totale:</dt>
                    <dd class="col-sm-9">@Model.QuantiteTotale</dd>
                    
                    <dt class="col-sm-3">Quantité disponible:</dt>
                    <dd class="col-sm-9">@Model.QuantiteDisponible</dd>
                </dl>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Confirmation</h5>
            </div>
            <div class="card-body">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger w-100 mb-2">
                        <i class="fas fa-trash"></i> Confirmer la suppression
                    </button>
                    <a class="btn btn-secondary w-100" asp-action="Index">
                        <i class="fas fa-arrow-left"></i> Annuler
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
