@model IEnumerable<Bibliotheques.ApplicationCore.Entities.Livre>
@{
    ViewData["Title"] = "Livres";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-book"></i> Liste des Livres</h2>
    <a class="btn btn-primary" asp-action="Create">
        <i class="fas fa-plus"></i> Nouveau Livre
    </a>
</div>

<!-- Recherche -->
<form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-8">
            <input name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Rechercher par titre, auteur ou ISBN..." />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-search"></i> Rechercher
            </button>
        </div>
    </div>
</form>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>Année</th>
                    <th>ISBN</th>
                    <th>Quantité</th>
                    <th>Disponible</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var livre in Model)
                {
                    <tr>
                        <td><strong>@livre.Titre</strong></td>
                        <td>@livre.Auteur</td>
                        <td>@livre.AnneePublication</td>
                        <td><code>@livre.Isbn</code></td>
                        <td>@livre.QuantiteTotale</td>
                        <td>
                            @if (livre.EstDisponible)
                            {
                                <span class="badge bg-success">@livre.QuantiteDisponible</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">0</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@livre.Id">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@livre.Id">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@livre.Id">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Aucun livre trouvé.
    </div>
}
