@model IEnumerable<Bibliotheques.ApplicationCore.Entities.Emprunt>
@{
    ViewData["Title"] = "Emprunts Actifs";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-clock"></i> Emprunts Actifs</h2>
    <a class="btn btn-primary" asp-action="Create">
        <i class="fas fa-plus"></i> Nouvel Emprunt
    </a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Livre</th>
                    <th>Usager</th>
                    <th>Date Emprunt</th>
                    <th>Date Retour Prévue</th>
                    <th>Jours Restants</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emprunt in Model)
                {
                    var joursRestants = (emprunt.DateRetourPrevue - DateTime.Now).Days;
                    <tr class="@(emprunt.EstEnRetard ? "table-warning" : "")">
                        <td>
                            <strong>@emprunt.Livre?.Titre</strong><br>
                            <small class="text-muted">@emprunt.Livre?.Auteur</small>
                        </td>
                        <td>@emprunt.Usager?.NomComplet</td>
                        <td>@emprunt.DateEmprunt.ToString("dd/MM/yyyy")</td>
                        <td>@emprunt.DateRetourPrevue.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (emprunt.EstEnRetard)
                            {
                                <span class="badge bg-danger">@emprunt.JoursDeRetard jours en retard</span>
                            }
                            else if (joursRestants <= 2)
                            {
                                <span class="badge bg-warning">@joursRestants jours</span>
                            }
                            else
                            {
                                <span class="badge bg-success">@joursRestants jours</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@emprunt.Id">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-success" asp-action="Retourner" asp-route-id="@emprunt.Id" 
                                   onclick="return confirm('Confirmer le retour de ce livre?')">
                                    <i class="fas fa-undo"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Aucun emprunt actif trouvé.
    </div>
}

<div class="mt-4">
    <a class="btn btn-outline-primary" asp-action="Index">
        <i class="fas fa-list"></i> Voir tous les emprunts
    </a>
    <a class="btn btn-outline-warning" asp-action="EnRetard">
        <i class="fas fa-exclamation-triangle"></i> Voir les emprunts en retard
    </a>
</div>
